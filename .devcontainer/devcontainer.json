{
    "name": "My Codespace",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:0-ubuntu-20.04",
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
      "ms-python.python",
      "ms-azuretools.vscode-docker"
    ],
    "postCreateCommand": "pip install -r requirements.txt",
    "forwardPorts": [3000],
    "remoteUser": "vscode"
  }
  